pipeline {
   agent any

   stages {
      stage('git') {
         steps {
           git 'https://github.com/iamdevopstrainer/DevOpsClassCodes.git'
         }
      }
   
   

      stage('compile') {
         steps {
            sh '/var/lib/jenkins/tools/hudson.tasks.Maven_MavenInstallation/MVN_361/bin/mvn compile'
         }
      }

      stage('test') {
         steps {
            sh '/var/lib/jenkins/tools/hudson.tasks.Maven_MavenInstallation/MVN_361/bin/mvn test'
         }
      }

      stage('package') {
         steps {
            sh '/var/lib/jenkins/tools/hudson.tasks.Maven_MavenInstallation/MVN_361/bin/mvn package'
         }
      }

      stage('deploy') {
         steps {
           sh 'sudo cp /var/lib/jenkins/workspace/AddressBookPipeline/addressbook.war /usr/share/tomcat/webapps/'
         }
      }

      stage('restarttomcat') {
         steps {
            sh 'sudo systemctl restart tomcat'

         }
      }
   }


}
